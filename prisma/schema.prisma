// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String        @id
  full_name String
  username  String        @unique
  email     String        @unique
  password  String
  role      UserRole      @default(USER)
  active    Boolean       @default(true)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  images    Image[]
  albums    Album[]
  playlists Playlist[]
  tracks    TrackArtist[]
}

model Album {
  id           String    @id
  name         String
  release_date String
  type         AlbumType @default(album)
  genres       Genre[]
  images       Image[]
  published    Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  artists      User[]
  tracks       Track[]
}

model Track {
  id           String        @id
  name         String
  file         String
  duration     Int
  published    Boolean       @default(false)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  artists      TrackArtist[]
  albumId      String
  album        Album         @relation(fields: [albumId], references: [id])
  track_number Int
  playlists    Playlist[]
}

model Genre {
  id        String   @id
  name      String   @unique
  albums    Album[]
  images    Image[]
  active    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  id        String     @id
  file      String
  width     Int
  height    Int
  albums    Album[]
  playlists Playlist[]
  genres    Genre[]
  userId    String
  user      User       @relation(fields: [userId], references: [id])
  published Boolean    @default(false)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Playlist {
  id          String   @id
  name        String
  description String
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     String
  public      Boolean  @default(false)
  tracks      Track[]
  images      Image[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TrackArtist {
  track    Track      @relation(fields: [trackId], references: [id])
  trackId  String
  role     ArtistRole @default(MAIN)
  artist   User       @relation(fields: [artistId], references: [id])
  artistId String

  @@unique([trackId, artistId])
}

enum UserRole {
  USER
  ARTIST
  MODERATOR
  ADMIN
  SUPERADMIN
}

enum ArtistRole {
  MAIN
  FEATURE
}

enum AlbumType {
  album
  compilation
  single
}
